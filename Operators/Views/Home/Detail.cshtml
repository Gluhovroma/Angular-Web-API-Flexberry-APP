<div class="container">
    <form name="personForm" class="ng-cloak">
        <div class="row-fluid">
            <div class="span6">
                <fieldset>
                    <legend>Данные абонента</legend>
                    <div class="control-group">
                        <label class="control-label" for="Surname">Фамилия</label>
                        <div class="controls">
                            <input type="text" name="Surname" data-ng-model="person.Surname" class="span6" readonly />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="Name">Имя</label>
                        <div class="controls">
                            <input type="text" name="Name" data-ng-model="person.Name" class="span6" readonly />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="Lastname">Отчество</label>
                        <div class="controls">
                            <input type="text" name="Lastname" data-ng-model="person.Lastname" class="span6" readonly />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="PhoneNumber">Телефон</label>
                        <div class="controls">
                            <input type="text" name="PhoneNumber" data-ng-model="person.PhoneNumber" class="span6" readonly />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="Passport">Паспортные данные</label>
                        <div class="controls">
                            <input type="text" name="Passport" data-ng-model="person.Passport" class="span6" readonly />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="suffix">Город</label>
                        <div class="controls">
                            <input type="text" name="suffix" data-ng-model="person.City.Name" class="span6" readonly />
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label" for="suffix">Оператор</label>
                        <div class="controls">
                            <input type="text" name="suffix" data-ng-model="person.Provider.Name" class="span6" readonly />
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="span6"></div>
        </div>
        <div class="controls row-fluid">
            &nbsp;
        </div>
        <div class="control-group">
            <div class="row-fluid" data-ng-hide="isDeleteRequested">
                <div class="span12">
                    <button class="btn" data-ng-click="returnToList()"><i class="icon-remove-sign"></i> Return to List</button>
                </div>
            </div>
            <div class="row-fluid" data-ng-show="isDeleteRequested">
                <div class="span12">
                    <button class="btn" data-ng-click="deletePerson()"><i class="icon-trash"></i> Confirm Delete</button>
                    <button class="btn" data-ng-click="returnToList()"><i class="icon-remove-sign"></i> Cancel</button>
                </div>
            </div>
            <div class="row-fluid" data-ng-show="errorMessage">
                <div class="span12 text-error">
                    {{errorMessage}}
                </div>
            </div>
        </div>
    </form>
</div>


